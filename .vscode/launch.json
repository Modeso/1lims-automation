{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Head: All Files",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/.vscode/run_nose.py",
            "cwd": "${workspaceRoot}",
            "redirectOutput": true,
            "args": [
                "-vs",
                "ui_testing/testcases",
                "--logging-level=WARNING",
            ]
        },
        {
            "name": "Head: Current File",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/.vscode/run_nose.py",
            "cwd": "${workspaceRoot}",
            "redirectOutput": true,
            "args": [
                "-vs",
                "${file}",
                "--logging-level=WARNING",
                "--tc-file=config.ini",
            ]
        },
        {
            "name": "Head: Selected Function",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/.vscode/run_nose.py",
            "cwd": "${workspaceRoot}",
            "redirectOutput": true,
            "args": [
                "-vs",
                "${file}:${input:className}TestCases.${selectedText}",
                "--logging-level=WARNING",
                "--tc-file=config.ini",
            ]
        },
        {
            "name": "Head: Selected Function with Params",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/.vscode/run_nose.py",
            "cwd": "${workspaceRoot}",
            "redirectOutput": true,
            "args": [
                "-vs",
                "${file}:${input:className}TestCases.${selectedText}_${input:selectParam}",
                "--logging-level=WARNING",
                "--tc-file=config.ini",
            ]
        }
    ],
    "inputs": [
        {
          "description": "Please select the page name",
          "id": "className",
          "type": "pickString",
          "options":[
              "Login",
              "Articles",
              "TestPlans",
              "TestUnits",
              "Contacts",
              "TestPlans",
              "AuditTrail",
              "CompanyProfile",
              "Header",
              "MyProfile",
              "Orders",
              "Analysis",
              "HeaderTest",
          ]
        },
        {
            "description": "Please enter the paramter number followed by '_' and the paramter name (e.g. 0_name)",
            "id": "selectParam",
            "type": "promptString"
        }
    ],
}